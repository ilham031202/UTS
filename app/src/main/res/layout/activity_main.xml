<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="348dp"
        android:layout_height="224dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="151dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="410dp"
        android:background="@drawable/background"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/gopay"
                    android:layout_width="127dp"
                    android:layout_height="72dp"
                    android:layout_margin="10dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/gopay" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="15dp"
                android:layout_height="match_parent" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/bitcoin"
                    android:layout_width="133dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/bitcoin_" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="134dp"
                    android:layout_height="64dp"
                    android:layout_margin="10dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/market"
                    android:id="@+id/market"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="15dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="136dp"
                    android:layout_height="65dp"
                    android:layout_margin="10dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ewallet_"
                    android:id="@+id/e_wallet" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="5dp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="395dp"
        android:layout_height="155dp"
        android:layout_marginTop="474dp"
        android:layout_marginBottom="155dp"
        android:src="@drawable/dana_news"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:contentDescription="@string/app_name"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="363dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="402dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="335dp"
        android:gravity="center"
        android:text="@string/news"
        android:textColor="@color/biru"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <ImageView
        android:id="@+id/profile"
        android:layout_width="74dp"
        android:layout_height="61dp"
        android:layout_marginStart="303dp"
        android:layout_marginTop="708dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile"
        android:contentDescription="@string/app_name"/>

    <ImageView
        android:id="@+id/wallet"
        android:layout_width="74dp"
        android:layout_height="61dp"
        android:layout_marginStart="208dp"
        android:layout_marginTop="708dp"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/wallet"
        android:contentDescription="@string/app_name"/>

    <ImageView
        android:id="@+id/history"
        android:layout_width="74dp"
        android:layout_height="61dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="708dp"
        android:layout_marginEnd="204dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/history"
        android:contentDescription="@string/app_name" />

    <ImageView
        android:id="@+id/home"
        android:layout_width="74dp"
        android:layout_height="61dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="708dp"
        android:layout_marginEnd="303dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/home"
        android:contentDescription="@string/app_name" />

</androidx.constraintlayout.widget.ConstraintLayout>